	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Package",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${fileDirname}"
		},
		{
			"name": "Debug Containerd with sudo",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/kata-containerd-macos/containerd",
			"args": ["--config=${workspaceFolder}/cmd/kata-containerd-macos/config.toml"],
			"env": {
				"GODEBUG": "netdns=go",
				"GOMEMLIMIT": "1024MiB"
			},
			"buildFlags": "-tags=osusergo",
			"preLaunchTask": "sudo-debug-setup",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Remote Attach to sudo-debug",
			"type": "go",
			"request": "attach",
			"mode": "remote",
			"remotePath": "${workspaceFolder}",

			"port": 2345,
			"host": "127.0.0.1",
			"cwd": "${workspaceFolder}",
			"trace": "verbose"
		}
	]
}
